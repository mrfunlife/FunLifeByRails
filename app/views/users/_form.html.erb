<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 form-body">
      <div class="innter-form">
        <%= form_for(@user, url: signup_path) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
              <%= f.label :name,class:"text-white-bold" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email ,class:"text-white-bold"%>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password ,class:"text-white-bold" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmation",class:"text-white-bold" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <%= f.submit "Create my account", class: "btn btn-danger center-block" %>
        <% end %>
      </div>
      <div class="social-login">
        <p class="text-white">- - - - - - - - - - - - - Register With - - - - - - - - - - - - - </p>
        <ul>
          <li><a href=""><i class="fa fa-facebook"></i> Facebook</a></li>
          <li><a href=""><i class="fa fa-google-plus"></i> Google+</a></li>
          <li><a href=""><i class="fa fa-twitter"></i> Twitter</a></li>
        </ul>
      </div>

    </div>
  </div>
</div>

