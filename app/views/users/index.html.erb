<% provide(:title, 'All Users') %>

<h3 class="w3-center w3-padding">Danh sách tất cả User</h3>

<%= will_paginate @users, class: "w3-center" %>
<% @users.each do |user| %>
    <div class="w3-card-2 w3-margin">
      <ul class="w3-ul w3-hoverable w3-white">
        <li class="w3-padding-16">
          <img src="https://seeklogo.com/images/M/manchester-united-logo-F14DA1FCCD-seeklogo.com.png" alt="Image" class="w3-left w3-margin-right" style="width:50px">
          <span class="w3-large"><%= user.name %></span><br>
          <span><%= user.email %></span>
          <span><% if logged_in? && current_user.admin? && !current_user?(user) %>| <%= link_to "delete", user, method: :delete, data: {confirm: "You sure?"} %></span>
            <% end %>
            </li>
      </ul>
    </div>
<% end %><!--<h1>Users</h1>-->

<%= will_paginate @users, class: "w3-center" %>
